{
  "_basic_section": {
    "description": "=== 基础功能 ===",
    "type": "text",
    "invisible": true
  },
  "steal_emoji": {
    "description": "开启表情包偷取功能",
    "type": "bool",
    "default": true
  },
  "auto_send": {
    "description": "自动随聊发送表情包",
    "type": "bool",
    "default": true
  },
  "emoji_chance": {
    "description": "表情包发送概率（0.0-1.0）",
    "type": "float",
    "default": 0.4
  },
  "smart_emoji_selection": {
    "description": "智能表情包选择（根据上下文匹配）",
    "type": "bool",
    "default": true,
    "hint": "启用后会根据回复内容智能匹配最相关的表情包，禁用则随机选择"
  },
  
  "_model_section": {
    "description": "=== 模型配置 ===",
    "type": "text",
    "invisible": true
  },
  "vision_provider_id": {
    "description": "视觉模型（用于图片分类）",
    "type": "string",
    "hint": "留空则使用当前会话模型",
    "_special": "select_provider"
  },
  "content_filtration": {
    "description": "开启内容审核（过滤不当图片）",
    "type": "bool",
    "default": false
  },
  
  "_storage_section": {
    "description": "=== 存储管理 ===",
    "type": "text",
    "invisible": true
  },
  "max_reg_num": {
    "description": "最大表情包数量",
    "type": "int",
    "default": 100
  },
  "do_replace": {
    "description": "达到上限时替换旧表情包",
    "type": "bool",
    "default": true
  },
  
  "_throttle_section": {
    "description": "=== 节流控制（减少API消耗） ===",
    "type": "text",
    "invisible": true
  },
  "image_processing_mode": {
    "description": "图片处理模式",
    "type": "string",
    "default": "probability",
    "options": ["always", "probability", "interval"],
    "labels": ["总是处理", "概率处理（推荐）", "间隔处理"]
  },
  "image_processing_probability": {
    "description": "概率模式：处理概率（推荐0.3）",
    "type": "float",
    "default": 0.3
  },
  "image_processing_interval": {
    "description": "间隔模式：处理间隔（秒）",
    "type": "int",
    "default": 60
  },
  
  "_webui_section": {
    "description": "=== WebUI 管理界面 ===",
    "type": "text",
    "invisible": true
  },
  "webui_enabled": {
    "description": "启用 WebUI 管理界面",
    "type": "bool",
    "default": true
  },
  "webui_host": {
    "description": "WebUI 监听地址",
    "type": "string",
    "default": "0.0.0.0",
    "hint": "0.0.0.0 表示允许外部访问，127.0.0.1 仅本地访问"
  },
  "webui_port": {
    "description": "WebUI 监听端口",
    "type": "int",
    "default": 8899
  },
  
  "_advanced_section": {
    "description": "=== 高级选项 ===",
    "type": "text",
    "invisible": true
  },
  "enable_raw_cleanup": {
    "description": "自动清理原始图片",
    "type": "bool",
    "default": true
  },
  "raw_cleanup_interval": {
    "description": "清理检查周期（分钟）",
    "type": "int",
    "default": 30
  },
  "enable_capacity_control": {
    "description": "自动容量控制",
    "type": "bool",
    "default": true
  },
  "capacity_control_interval": {
    "description": "容量检查周期（分钟）",
    "type": "int",
    "default": 60
  }
}

